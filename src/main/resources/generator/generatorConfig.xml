<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <properties resource="application.properties"/>

    <!--&lt;!&ndash; 数据库驱动包位置 &ndash;&gt;-->
    <!--<classPathEntry  location=""/>-->

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!--&lt;!&ndash; TKmybatis配置 &ndash;&gt;-->
        <!-- 生成的Java文件的编码-->
        <!--<property name="javaFileEncoding" value="UTF-8"/>-->
        <!--beginningDelimiter和endingDelimiter：指明数据库的用于标记数据库对象名的符号，比如ORACLE就是双引号，MYSQL默认是`反引号； -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <!--<plugin type="${mapper.plugin}">-->
        <!--<property name="mappers" value="${mapper.Mapper}"/>-->
        <!--</plugin>-->

        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 数据库链接URL、用户名、密码 -->
        <jdbcConnection driverClass="${driver-class-name}"
                        connectionURL="${druid.url}"
                        userId="${druid.username}"
                        password="${druid.password}">
        </jdbcConnection>
        <!-- 生成模型的包名和位置 -->
        <javaModelGenerator targetPackage="com.wjk.sstm.model" targetProject="src/main/java"/>
        <!-- 生成的映射文件包名和位置 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>
        <!-- 生成service的包名和位置 -->
        <javaClientGenerator targetPackage="com.wjk.sstm.mapper" targetProject="src/main/java" type="XMLMAPPER"/>
        <!-- 要生成的那些表 -->
        <table tableName="kuaidi100_delivery" domainObjectName="Delivery"/>
    </context>
</generatorConfiguration>
